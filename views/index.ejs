<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
      <!-- <img src="#" id="icon" alt="User Icon" /> -->
    </div>

    <!-- Login Form -->
    <form method="POST">
      <input
        type="text"
        id="name"
        class="fadeIn third"
        name="name"
        placeholder="Name"
      />
      <input
        type="text"
        id="email"
        class="fadeIn third"
        name="email"
        placeholder="Email"
      />
      <input
        type="text"
        id="class_id"
        class="fadeIn third"
        name="classId"
        placeholder="Class Id"
      />
      <div class="switch_container">
        <label class="switch">
          <input type="checkbox" name="isTeacher" />
          <span class="slider round"></span>
        </label>
        <div class="switch_stat">Join as Teacher</div>
      </div>
      <input type="submit" class="fadeIn fourth" value="Join" />
    </form>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      Interactive Whiteboard
      <!-- <a class="underlineHover" href="#">Forgot Password?</a> -->
    </div>
  </div>
</div>
